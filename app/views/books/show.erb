<h1><%= @book.title %> </h1>
  <h2>By<br><%= @book.author %></h2>
  <a href="/books/<%= @book.id %>/edit">Edit book details</a>

  <form method="post" action="/books/<%=@book.id%>/delete">
    <input id="hidden" type="hidden" name="_method" value="delete">
    <input type="submit" value="Delete">
  </form>

    <form method="POST" action="/books/<%= @book.id %>/booknotes">
      <h4>One-line summary:
        <input type="text" name="summary" id="summary" value="optional">
      </h4>
      <h4>Main premise:
        <input type="text" name="main_premise" id="main_premise">
      </h4>
      <h4>Favorite quotes:
        <input type="text" name="quotes" id="quotes">
      </h4>
      <h4>Follow-up:
        <input type="text" name="follow_up" id="follow_up">
      </h4>
      <h4><input type="submit" id="submit"></h4>
    </form>
