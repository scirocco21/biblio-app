

<main role="main">

  <div class="jumbotron">
    <div class="container">
      <h1 class="display-3">Welcome to Biblio!</h1>
        <p>Biblio is your personal bookshelf. Keep track of your favourite tomes and add some notes on the important stuff.</p>
    </div>
  </div>


  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h2>Log In</h2>

          <form action="/login" method="post">
              <h4>Username:</h4>
                <input type="text" name="username" id="username">
              <h4>Password:</h4>
                <input type="password" name="password" id="password">
              <%= @error_message %><br>
              <input type="submit" value="Log In" id="submit">
          </form>
        </div>
      <div class="col-md-6">
        <h2>Don't have an account?</h2>
          <h4>Signup <a href="/signup">here</a></h4>
      </div>
    </div>
  </div>

</main>
