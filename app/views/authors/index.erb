
<% if @authors.length == 0 %>
  <h2> <%= "Nothing here yet. Start adding some books." %></h2>
<% else %>

  <div class="row">
    <% @authors.each do |author| %>
      <div class="col-sm-6">
        <!-- beginning of individual card -->
        <div class="card">
          <!-- header -->
          <div class="card-header text-center">
            <h4 class="class-title"><%= author.name %></h4>
          </div>
          <!-- body -->
          <div class="card-body text-center">
            <ul class="list-group">
              <% author.books.each do |book| %>
              <li class="list-group-item"><%= book.title %>
                <% if current_user.books.include?(book) %>
                  <div class="text-center">
                    <button class="btn btn-dark btn-sm"><a href="/books/<%= book.id %>/edit" class="text-light">Edit this title</a></button>
                  </div>
                <% else %>
                  <div class="text-center">
                    <button class="btn btn-dark btn-sm"><a href="/books/<%= book.id %>/add" class="text-light">Add to my bookshelf</a></button>
                  </div>
                <% end %>
              </li>
            <% end %>
          </div>
        </div>
      <!-- end of card -->
      </div>
    <% end %>
  </div>
<%end%>
